<object class="QtGraphicsManager">
    <object href="/diffractometer/diffractometer" role="diffractometer"/>
    <object href="/singleton_objects/beam" role="beam_info"/>
    <object href="/singleton_objects/camera" role="camera"/>

   <!-- Enable move sample buttons 
        TODO: implement this feature
   <enable_move_buttons>False</enable_move_buttons> -->
   <omega_move_delta>30</omega_move_delta>
   <positive_negative_scroll_move_factor>3</positive_negative_scroll_move_factor>
   <!-- Use magnification tool -->
   <magnification_tool>{"scale": 4, "area_size": 50}</magnification_tool>

   <!-- Scale incomming video frame -->
   <!-- <default_image_scale>1</default_image_scale> -->
   <image_scale_list>(1, 1.5, 2, 2.5, 3, 4, 5)</image_scale_list> 

   <!-- Scale all graphics view -->
   <!-- <view_scale>1.3</view_scale> -->

   <!-- If True disable vertical and horizontal scrollbars -->
   <scrollbars_always_off>True</scrollbars_always_off>
</object>
